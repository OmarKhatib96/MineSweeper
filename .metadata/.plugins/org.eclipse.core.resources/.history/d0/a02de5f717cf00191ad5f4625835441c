import java.awt.* ;
import java.awt.event.* ;
import javax.swing.* ;
public class IHMHello extends JPanel {
/** constructeur
* @param la classe contenant les traitements
*/
 public IHMHello(AppHello appli) {
ImageIcon quitIcon = new ImageIcon("sortieCLR.gif"); // image
JLabel lab = new JLabel("Hello");
JButton butQuit = new JButton(quitIcon) ; // bouton quit
butQuit.addActionListener( // ajout du listeneur au bouton
new ActionsHello(ActionsHello.QUIT));
add(lab) ; // ajout du label dans le panel
add(butQuit) ; // ajout du bouton dans le panel
 }
} 