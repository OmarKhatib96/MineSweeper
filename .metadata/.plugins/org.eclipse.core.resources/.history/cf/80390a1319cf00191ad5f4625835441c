import java.awt.event.* ;
public class ActionsHello implements ActionListener {
public static final int QUIT = 0 ; // constante
private AppHello appli ; // référence sur l ’appli
private int type ; // type d ’evt (QUIT/…)

public ActionsHello(int type, AppHello appli) { // constructeur
this.appli = appli ;
this.type = type ;
 }
 public void actionPerformed(ActionEvent evt) { // aiguillage
if (type == QUIT)
 appli.quit();
 }
} 